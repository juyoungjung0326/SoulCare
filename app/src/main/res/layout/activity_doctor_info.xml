<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"

    android:background="@drawable/unnamed"

    android:paddingRight="16dp" >

    <ImageView
        android:layout_width="395dp"
        android:layout_height="468dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="263dp"
        android:src="@drawable/bobbbb" />

    <Button

        android:id="@+id/button_add_edit"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/newaa"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"

        android:text="Add/Change Doctor"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Not Yet Selected\nAddress - \nCity, State, Zip -\nPhone No- None"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="175dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Doctor Name - \nAddress - \nCity, State, Zip -\nPhone No-"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="175dp"/>

</RelativeLayout>