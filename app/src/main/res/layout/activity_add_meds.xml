<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:background="#273E4C"


    android:paddingRight="16dp" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:scaleY="1"
        android:src="@drawable/heart" />

    <ImageView
        android:id="@+id/ques"
        android:layout_width="33dp"
        android:layout_height="51dp"
        android:layout_marginTop="340dp"
        android:layout_toRightOf="@id/phone"
        android:src="@drawable/ques" />

    <ImageView
        android:id="@+id/ques1"
        android:layout_width="30dp"
        android:layout_height="53dp"
        android:layout_marginTop="400dp"
        android:layout_toRightOf="@id/time"
        android:src="@drawable/ques" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Name : "
        android:layout_marginTop="300dp"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />
    <EditText
        android:id = "@+id/medicine"
        android:layout_width="160dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:hint="  Medicine Name"
        android:layout_marginTop="286dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/rect"

        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />
    <TextView
        android:id = "@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Phone  :"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />
    <EditText
        android:id = "@+id/phone"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint=" (XXX)-XXX-XXXX"
        android:background="@drawable/rect"
        android:layout_marginTop="341dp"
        android:layout_marginLeft="160dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="10"
        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="407dp"
        android:text="Set Time             : "
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold" />

    <EditText
        android:id = "@+id/time"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint=" Hours"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/rect"
        android:padding="10dp"
        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />

    <Button
        android:id = "@+id/button_add"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="465dp"
        android:background="@drawable/aa"
        android:backgroundTint="@color/black"
        android:text="ADD"
        android:enabled="false"
        android:textStyle="bold" />
    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_add"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        android:text="Health Tips: Physical fitness is the first requisite of happiness"
        android:textColor="@android:color/holo_green_light"
        android:textSize="10dp"
        android:textStyle="bold" />



</RelativeLayout>