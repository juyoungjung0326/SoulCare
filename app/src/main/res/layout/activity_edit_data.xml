<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:background="#273E4C"



    android:paddingRight="16dp" >

    <ImageView
        android:id="@+id/quess"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginTop="280dp"
        android:layout_toRightOf="@+id/name"
        android:src="@drawable/ques" />
    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="40dp"
        android:text="Health Tips: Always be on Time While Taking Medicines"
        android:textColor="@android:color/holo_green_light"
        android:textSize="10dp"
        android:textStyle="bold" />
    <EditText
        android:id = "@+id/name"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="  Edit Medicine Name"
        android:layout_marginTop="286dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rect"
        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
         />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:scaleType="fitCenter"

        android:src="@drawable/meds" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:scaleType="fitCenter"

        android:src="@drawable/jj" />
    <Button

        android:id="@+id/del"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/aa"
        android:backgroundTint="@color/black"

        android:text="Delete"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold" />
    <Button

        android:id="@+id/save"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/aa"
        android:backgroundTint="@android:color/black"
        android:text="Save"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold" />
    <Button

        android:id="@+id/timer"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/aa"
        android:backgroundTint="@color/black"

        android:text="Set Timer"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold" />

</RelativeLayout>