<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:background="#273E4C"


    android:paddingRight="16dp" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:scaleY="1"
        android:src="@drawable/heart" />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Type of Medicine is it ?"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="90dp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />
    <EditText
        android:id = "@+id/type"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:hint="  Medicine Type"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rect"

        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When was the Last Visit ?"
        android:layout_marginTop="335dp"
        android:layout_marginLeft="90dp"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />
    <EditText
        android:id = "@+id/visit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint=" MM/DD"
        android:background="@drawable/rect"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="40dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:maxLength="10"
        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="420dp"
        android:text="Type of Service You Received ?"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold" />

    <EditText
        android:id = "@+id/service"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint=" Type of Service"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="445dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rect"
        android:padding="10dp"
        android:textColorHint="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        />

    <Button
        android:id = "@+id/add12"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/aa"
        android:backgroundTint="@color/black"
        android:text="ADD"
        android:textStyle="bold" />
    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add12"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:text="Health Tips: Physical fitness is the first requisite of happiness"
        android:textColor="@android:color/holo_green_light"
        android:textSize="10dp"
        android:textStyle="bold" />



</RelativeLayout>